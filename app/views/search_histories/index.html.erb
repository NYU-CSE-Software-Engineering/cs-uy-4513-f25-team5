<% content_for :title, "Search History" %>
<% content_for :body_class, "h-screen bg-black text-white font-syne antialiased overflow-hidden" %>
<% content_for :container_class, "h-screen flex flex-col" %>
<% content_for :main_class, "flex-1 pt-24 pb-4 px-6 overflow-y-auto" %>
<% content_for :content_class, "max-w-6xl mx-auto" %>

<!-- Header -->
<div class="mb-10 opacity-0 animate-fadeIn">
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Search History</h1>
  <p class="text-xl text-gray-400">Your recent searches</p>
</div>

<!-- Search History List -->
<div class="opacity-0 animate-fadeIn" style="animation-delay: 0.1s;">
  <% if @search_histories.present? && @search_histories.any? %>
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Recent Searches</h2>
      <span class="text-gray-400"><%= @search_histories.count %> search<%= @search_histories.count == 1 ? '' : 'es' %></span>
    </div>

    <div class="space-y-4">
      <% @search_histories.each_with_index do |history, index| %>
        <div class="glass-card rounded-2xl p-6 hover-lift opacity-0 animate-fadeIn" style="animation-delay: <%= 0.2 + (index * 0.05) %>s;">
          <div class="flex items-center justify-between">
            <div class="flex-1">
              <div class="flex flex-wrap gap-3 mb-3">
                <% if history.city.present? %>
                  <span class="px-3 py-1 text-sm rounded-full bg-white/10 text-white">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <%= history.city %>
                  </span>
                <% end %>
                <% if history.min_price.present? || history.max_price.present? %>
                  <span class="px-3 py-1 text-sm rounded-full bg-white/10 text-white">
                    $<%= history.min_price || 0 %> - $<%= history.max_price || 'âˆž' %>
                  </span>
                <% end %>
                <% if history.keywords.present? %>
                  <span class="px-3 py-1 text-sm rounded-full bg-white/10 text-white">
                    "<%= history.keywords %>"
                  </span>
                <% end %>
              </div>
              <p class="text-sm text-gray-500"><%= time_ago_in_words(history.created_at) %> ago</p>
            </div>
            <div class="ml-4">
              <%= link_to search_listings_path(history.to_params), class: "px-6 py-2 text-sm font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200" do %>
                Search Again
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty state -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No search history yet</h3>
      <p class="text-gray-400 mb-6">Your searches will appear here after you search for listings.</p>
      <%= link_to "Start Searching", search_listings_path, class: "inline-block px-8 py-3 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200" %>
    </div>
  <% end %>
</div>
