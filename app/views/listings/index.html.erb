<% content_for :title, "Browse Listings" %>
<% content_for :body_class, "h-screen bg-black text-white font-syne antialiased overflow-hidden" %>
<% content_for :container_class, "h-screen flex flex-col" %>
<% content_for :main_class, "flex-1 pt-24 pb-4 px-6 overflow-y-auto" %>
<% content_for :content_class, "max-w-6xl mx-auto" %>

<!-- Header -->
<div class="mb-10 opacity-0 animate-fadeIn">
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">Browse Listings</h1>
  <p class="text-xl text-gray-400">Find your perfect space with filters</p>
</div>

<!-- Search Form -->
<div class="glass-card rounded-2xl p-8 mb-12 opacity-0 animate-fadeIn" style="animation-delay: 0.1s;">
  <%= form_with url: listings_path, method: :get, local: true, class: "space-y-6" do %>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div>
        <%= label_tag :city, 'City', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= text_field_tag :city, @filters&.dig(:city), 
            placeholder: 'e.g., New York', 
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :min_price, 'Min Price', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= number_field_tag :min_price, @filters&.dig(:min_price), 
            min: 0, 
            placeholder: '0',
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :max_price, 'Max Price', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= number_field_tag :max_price, @filters&.dig(:max_price), 
            min: 0, 
            placeholder: '5000',
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>

      <div>
        <%= label_tag :keywords, 'Keywords', class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= text_field_tag :keywords, @filters&.dig(:keywords), 
            placeholder: 'e.g., furnished', 
            class: "w-full px-4 py-3 rounded-xl bg-gray-900 border border-white/10 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#FFFC00]/50 focus:border-transparent transition-all duration-200" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= submit_tag 'Search', class: "px-8 py-3 text-base font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-all duration-200 cursor-pointer" %>
    </div>
  <% end %>
</div>

<!-- Results -->
<div class="opacity-0 animate-fadeIn" style="animation-delay: 0.2s;">
  <% if @listings.present? && @listings.any? %>
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Results</h2>
      <span class="text-gray-400"><%= @listings.count %> listing<%= @listings.count == 1 ? '' : 's' %> found</span>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @listings.each_with_index do |listing, index| %>
        <a href="<%= listing_path(listing) %>" class="glass-card rounded-2xl overflow-hidden hover-lift block" style="animation-delay: <%= 0.3 + (index * 0.05) %>s;">
          <!-- Image -->
          <% if listing.primary_image.present? %>
            <div class="w-full h-48 bg-gray-900 overflow-hidden">
              <%= image_tag url_for(listing.primary_image), alt: listing.title, class: "w-full h-full object-cover" %>
            </div>
          <% else %>
            <div class="w-full h-48 bg-gray-900 flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% end %>

          <div class="p-6">
            <!-- Status Badge -->
            <div class="flex items-center justify-between mb-4">
              <% if listing.status == 'verified' %>
                <span class="w-6 h-6 rounded-full bg-blue-500 flex items-center justify-center" title="Verified">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </span>
              <% elsif listing.status == 'pending' %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Pending</span>
              <% elsif listing.status == 'rejected' %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-red-500/10 text-red-400 border border-red-500/20">Rejected</span>
              <% else %>
                <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-500/10 text-gray-400 border border-gray-500/20">Pending</span>
              <% end %>
              <span class="text-2xl font-bold text-white">$<%= number_with_precision(listing.price, precision: 0) %></span>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-semibold text-white mb-2 line-clamp-1"><%= listing.title %></h3>
            
            <!-- Location -->
            <div class="flex items-center gap-2 text-gray-400 mb-4">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span><%= listing.city %></span>
            </div>

            <!-- Description preview -->
            <% if listing.description.present? %>
              <p class="text-gray-500 text-sm line-clamp-2"><%= listing.description %></p>
            <% end %>
          </div>
        </a>
      <% end %>
    </div>
  <% elsif @filters.present? && @filters.values.any?(&:present?) %>
    <!-- No results -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No listings found matching your search criteria</h3>
      <p class="text-gray-400">Try adjusting your search filters to find more results.</p>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="glass-card rounded-2xl p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-white/5 flex items-center justify-center">
        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">No listings yet</h3>
      <p class="text-gray-400 mb-6">Be the first to create a listing and find your perfect roommate.</p>
      <%= link_to 'Create New Listing', new_listing_path, class: "inline-flex px-6 py-3 text-sm font-semibold rounded-full bg-white text-black hover:bg-gray-200 transition-colors duration-200" %>
    </div>
  <% end %>
</div>
