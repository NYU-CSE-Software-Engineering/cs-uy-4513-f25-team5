<% content_for :title, "Dashboard" %>

<!-- Welcome Header -->
<div class="mb-10 opacity-0 animate-fadeIn">
  <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-4">
    Welcome back, <span class="text-[#FFFC00]"><%= current_user&.display_name.presence || current_user&.email&.split('@')&.first || "Guest" %></span>
  </h1>
  <p class="text-xl text-gray-400">Find your perfect roommate using our smart matching algorithm.</p>
</div>

<!-- Match Stats -->
<div class="grid md:grid-cols-3 gap-6 mb-8 opacity-0 animate-fadeIn" style="animation-delay: 0.1s;">
  <div class="glass-card rounded-2xl p-6 border-[#FFFC00]/20">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-400 mb-1">Potential Matches</p>
        <p class="text-3xl font-bold text-[#FFFC00]"><%= @matches_count %></p>
      </div>
      <div class="w-12 h-12 rounded-xl bg-[#FFFC00]/20 flex items-center justify-center">
        <svg class="w-6 h-6 text-[#FFFC00]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
      </svg>
      </div>
    </div>
  </div>
  
  <div class="glass-card rounded-2xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-400 mb-1">Active Conversations</p>
        <p class="text-3xl font-bold text-white"><%= @conversations_count %></p>
      </div>
      <div class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      </div>
    </div>
  </div>
  
  <div class="glass-card rounded-2xl p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-400 mb-1">Profile Complete</p>
        <p class="text-3xl font-bold text-white"><%= @profile_complete ? "‚úì" : "‚Äî" %></p>
      </div>
      <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center">
        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>
  </div>
</div>

<!-- Primary Action: Find Roommates -->
<div class="mb-12 opacity-0 animate-fadeIn" style="animation-delay: 0.15s;">
  <a href="<%= matches_path %>" class="glass-card rounded-2xl p-8 hover-lift block border-2 border-[#FFFC00]/30 bg-gradient-to-br from-[#FFFC00]/10 to-transparent">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-3 mb-3">
          <div class="w-16 h-16 rounded-xl bg-[#FFFC00]/20 flex items-center justify-center">
            <svg class="w-8 h-8 text-[#FFFC00]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-white mb-1">Find Your Perfect Roommate</h2>
            <p class="text-gray-400">Discover compatible roommates using our smart matching algorithm</p>
          </div>
        </div>
        <% if @matches_count > 0 %>
          <p class="text-[#FFFC00] font-semibold mt-4">You have <%= @matches_count %> potential match<%= @matches_count == 1 ? '' : 'es' %> waiting!</p>
        <% elsif !@profile_complete %>
          <p class="text-yellow-400 font-semibold mt-4">Complete your profile to see matches</p>
        <% else %>
          <p class="text-gray-400 mt-4">Click to find your matches</p>
        <% end %>
      </div>
      <div class="ml-6">
        <svg class="w-8 h-8 text-[#FFFC00]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      </div>
    </div>
  </a>
</div>

<!-- Top Matches Preview -->
<% if @top_matches.any? %>
  <div class="mb-12 opacity-0 animate-fadeIn" style="animation-delay: 0.2s;">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Your Top Matches</h2>
      <a href="<%= matches_path %>" class="text-[#FFFC00] hover:text-[#FFFC00]/80 text-sm font-semibold">View All ‚Üí</a>
    </div>
    <div class="grid md:grid-cols-3 gap-6">
      <% @top_matches.each_with_index do |match, index| %>
        <a href="<%= match_path(match) %>" class="glass-card rounded-2xl p-6 hover-lift">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-semibold text-white"><%= match.matched_user.display_name %></h3>
            <span class="px-3 py-1 text-xs font-bold rounded-full bg-[#FFFC00]/20 text-[#FFFC00]">
              <%= match.compatibility_score.round %>%
            </span>
          </div>
          <% if match.matched_user.preferred_location.present? %>
            <p class="text-gray-400 text-sm mb-2">üìç <%= match.matched_user.preferred_location %></p>
          <% end %>
          <% if match.matched_user.budget.present? %>
            <p class="text-gray-400 text-sm">üí∞ $<%= match.matched_user.budget %>/month</p>
          <% end %>
        </a>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Quick Actions -->
<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
  <a href="<%= explore_path %>" class="glass-card rounded-2xl p-6 hover-lift opacity-0 animate-fadeIn text-center" style="animation-delay: 0.1s;">
    <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 mx-auto">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
    </div>
    <h3 class="text-lg font-semibold text-white mb-1">Explore Listings</h3>
    <p class="text-sm text-gray-400">Browse and like available spaces</p>
  </a>

  <a href="<%= user_listings_path(current_user) %>" class="glass-card rounded-2xl p-6 hover-lift opacity-0 animate-fadeIn text-center" style="animation-delay: 0.15s;">
    <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 mx-auto">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
    </div>
    <h3 class="text-lg font-semibold text-white mb-1">My Listings</h3>
    <p class="text-sm text-gray-400">Manage your listings</p>
  </a>

  <a href="<%= new_listing_path %>" class="glass-card rounded-2xl p-6 hover-lift opacity-0 animate-fadeIn text-center" style="animation-delay: 0.2s;">
    <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 mx-auto">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    </div>
    <h3 class="text-lg font-semibold text-white mb-1">Create Listing</h3>
    <p class="text-sm text-gray-400">Share your space</p>
  </a>

  <a href="<%= profile_path %>" class="glass-card rounded-2xl p-6 hover-lift opacity-0 animate-fadeIn text-center" style="animation-delay: 0.25s;">
    <% if current_user&.avatar.present? %>
      <div class="w-12 h-12 rounded-full overflow-hidden mb-4 mx-auto">
        <img src="<%= current_user.avatar.data_uri %>" alt="Profile picture" class="w-full h-full object-cover"/>
      </div>
    <% else %>
      <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center mb-4 mx-auto">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
    <% end %>
    <h3 class="text-lg font-semibold text-white mb-1">My Profile</h3>
      <p class="text-sm text-gray-400">Manage your preferences</p>
    </a>
    
    <% if @conversations_count > 0 %>
      <div class="glass-card rounded-2xl p-6 text-center">
        <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4 mx-auto">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white mb-1">Messages</h3>
        <p class="text-sm text-gray-400"><%= @conversations_count %> active conversation<%= @conversations_count == 1 ? '' : 's' %></p>
      </div>
    <% end %>
  </div>
</div>

<!-- For Room Listers Section -->
<div class="mb-12 opacity-0 animate-fadeIn" style="animation-delay: 0.3s;">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold">For Room Listers</h2>
    <p class="text-sm text-gray-400">Have a room? List it here</p>
  </div>
  <div class="grid md:grid-cols-2 gap-6">
    <a href="<%= listings_path %>" class="glass-card rounded-2xl p-6 hover-lift">
      <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-white mb-1">My Listings</h3>
      <p class="text-sm text-gray-400">Manage your room listings</p>
    </a>

    <a href="<%= new_listing_path %>" class="glass-card rounded-2xl p-6 hover-lift">
      <div class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center mb-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-white mb-1">Create Listing</h3>
      <p class="text-sm text-gray-400">List your available room</p>
    </a>
  </div>
</div>

<!-- User Info Card -->
<div class="glass-card rounded-2xl p-8 opacity-0 animate-fadeIn" style="animation-delay: 0.3s;">
  <h2 class="text-2xl font-bold mb-6">Your Account</h2>
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <p class="text-sm text-gray-400 mb-1">Email</p>
      <p class="text-lg text-white"><%= current_user&.email || "Not set" %></p>
    </div>
    <div>
      <p class="text-sm text-gray-400 mb-1">Display Name</p>
      <p class="text-lg text-white"><%= current_user&.display_name.presence || "Not set" %></p>
    </div>
    <div>
      <p class="text-sm text-gray-400 mb-1">Account Type</p>
      <p class="text-lg text-white">
        <% if current_user&.admin? %>
          <span class="inline-flex items-center gap-2">
            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-[#FFFC00]/20 text-[#FFFC00]">Admin</span>
          </span>
        <% else %>
          <span class="text-gray-300">Regular User</span>
        <% end %>
      </p>
    </div>
    <div>
      <p class="text-sm text-gray-400 mb-1">Member Since</p>
      <p class="text-lg text-white"><%= current_user&.created_at&.strftime("%B %d, %Y") || "Unknown" %></p>
    </div>
  </div>
</div>

<% if current_user&.admin? %>
  <!-- Admin Section -->
  <div class="mt-8 glass-card rounded-2xl p-8 border-[#FFFC00]/20 opacity-0 animate-fadeIn" style="animation-delay: 0.4s;">
    <div class="flex items-center gap-3 mb-6">
      <span class="px-3 py-1 text-xs font-semibold rounded-full bg-[#FFFC00]/20 text-[#FFFC00]">Admin</span>
      <h2 class="text-2xl font-bold">Admin Tools</h2>
    </div>
    <div class="grid md:grid-cols-2 gap-4">
      <a href="<%= verification_requests_path %>" class="flex items-center gap-4 p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <p class="font-semibold text-white">Verify Listings</p>
          <p class="text-sm text-gray-400">Review and approve listings</p>
        </div>
      </a>
      <a href="<%= matches_path %>" class="flex items-center gap-4 p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-colors">
        <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <div>
          <p class="font-semibold text-white">Manage Matches</p>
          <p class="text-sm text-gray-400">View user matches</p>
        </div>
      </a>
    </div>
  </div>
<% end %>
