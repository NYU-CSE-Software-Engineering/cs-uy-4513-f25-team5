<% content_for :body_class, "h-screen bg-black text-white font-syne antialiased overflow-hidden" %>
<% content_for :container_class, "h-screen flex flex-col" %>
<% content_for :main_class, "flex-1 pt-24 pb-4 px-6 overflow-y-auto" %>

<div class="max-w-4xl mx-auto">
  <h1 class="text-4xl font-bold mb-8 text-white">Match Details</h1>

  <div class="match-details space-y-6">
    <div class="glass-card rounded-2xl p-8">
      <h2 class="text-3xl font-semibold text-white mb-4"><%= @matched_user.display_name %></h2>

      <% if @match&.compatibility_score.present? %>
        <div class="compatibility-score bg-white/5 border border-white/10 rounded-xl p-4 mb-6">
          <p class="text-[#FFFC00] font-semibold text-lg">
            Compatibility: <%= @match.compatibility_score %>%
          </p>
        </div>
      <% end %>
      
      <div class="profile-information space-y-4 mb-8">
        <h3 class="text-xl font-semibold mb-4 text-gray-200">Profile Information</h3>
        <p class="text-gray-300"><strong class="text-gray-200">Email:</strong> <%= @matched_user.email %></p>
        <% if @matched_user.display_name.present? %>
          <p class="text-gray-300"><strong class="text-gray-200">Name:</strong> <%= @matched_user.display_name %></p>
        <% end %>
        <% if @matched_user.bio.present? %>
          <p class="text-gray-300"><strong class="text-gray-200">Bio:</strong> <%= @matched_user.bio %></p>
        <% end %>
      </div>
      
      <div class="lifestyle-preferences space-y-4">
        <h3 class="text-xl font-semibold mb-4 text-gray-200">Lifestyle Preferences</h3>
        <% if @matched_user.preferred_location.present? %>
          <p class="text-gray-300"><strong class="text-gray-200">Preferred Location:</strong> <%= @matched_user.preferred_location %></p>
        <% end %>
        <% if @matched_user.sleep_schedule.present? %>
          <p class="text-gray-300"><strong class="text-gray-200">Sleep Schedule:</strong> <%= @matched_user.sleep_schedule %></p>
        <% end %>
        <% if @matched_user.pets.present? %>
          <p class="text-gray-300"><strong class="text-gray-200">Pets:</strong> <%= @matched_user.pets %></p>
        <% end %>
        <% if @matched_user.budget.present? %>
          <p class="text-gray-300"><strong class="text-gray-200">Budget:</strong> $<%= @matched_user.budget %></p>
        <% end %>
      </div>
    </div>
    
    <!-- Listings liked by this match -->
    <% if @liked_listings.any? %>
      <div class="glass-card rounded-2xl p-8">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-2xl font-semibold text-white">What <%= @matched_user.display_name %> Likes</h3>
          <%= link_to "See All ‚Üí", liked_by_matches_matches_path, class: "text-[#FFFC00] hover:text-[#FFFC00]/80 text-sm font-semibold" %>
        </div>
        
        <div class="grid md:grid-cols-2 gap-4">
          <% @liked_listings.each do |liked_listing| %>
            <% listing = liked_listing.listing %>
            <% next unless listing.present? %>
            
            <div class="bg-white/5 rounded-xl p-4 hover:bg-white/10 transition-colors">
              <h4 class="text-lg font-semibold text-white mb-2">
                <%= link_to listing.title, listing_path(listing), class: "hover:text-[#FFFC00] transition-colors" %>
              </h4>
              <div class="space-y-1">
                <% if listing.city.present? %>
                  <p class="text-gray-400 text-sm">üìç <%= listing.city %></p>
                <% end %>
                <% if listing.price.present? %>
                  <p class="text-gray-400 text-sm">üí∞ $<%= listing.price %>/month</p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <div class="actions flex flex-wrap gap-3">
      <%= link_to "‚Üê Back to Matches", matches_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-xl transition-colors inline-block" %>
      <%= button_to "Start Conversation", conversations_path(user_id: @matched_user.id), method: :post, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-xl" %>
    </div>
  </div>
</div>
